# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/storycanvas?schema=public

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-organization-id

# AI Configuration
AI_MODEL_TEXT=gpt-4-turbo-preview
AI_MODEL_IMAGE=dall-e-3
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# Content Moderation
ENABLE_CONTENT_MODERATION=true
MODERATION_STRICT_MODE=true

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_PREMIUM=price_premium_id
STRIPE_PRICE_ID_FAMILY=price_family_id

# Email Configuration (NodeMailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@storycanvas.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
COOKIE_SECRET=your-cookie-secret-key

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_BOOK_SHARING=true
ENABLE_ANALYTICS=true

# Limits
FREE_TIER_BOOKS_PER_MONTH=3
PREMIUM_TIER_BOOKS_PER_MONTH=unlimited
MAX_BOOK_PAGES=50
MAX_STORY_LENGTH=5000

# Cache TTL (seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400
